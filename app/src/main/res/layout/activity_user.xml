<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/user_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/user_avater"
        android:layout_width="@dimen/user_avatar_dimen"
        android:layout_height="@dimen/user_avatar_dimen"
        android:src="@drawable/avatar_placeholder"/>

    <TextView
        android:id="@+id/user_name"
        style="@style/UserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/user_name_size"/>

    <TextView
        android:id="@+id/user_followers"
        style="@style/UserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/user_info_text_size"/>

    <TextView
        android:id="@+id/user_stars"
        style="@style/UserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/user_info_text_size"/>

</LinearLayout>