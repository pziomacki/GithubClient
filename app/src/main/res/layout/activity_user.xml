<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/user_container"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/user_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/user_avater"
        android:layout_width="@dimen/user_avatar_dimen"
        android:layout_height="@dimen/user_avatar_dimen"
        android:src="@drawable/avatar_placeholder"/>

    <TextView
        android:id="@+id/user_name"
        style="@style/UserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/user_name_size"/>

    <TextView
        android:id="@+id/user_followers"
        style="@style/UserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/user_info_text_size"/>

    <TextView
        android:id="@+id/user_repositories"
        style="@style/UserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/user_info_text_size"/>

</LinearLayout>